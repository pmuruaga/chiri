@model ControlBingosChiri.Models.PopupTexto

@{
	ViewBag.Title = "Popup";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cargar Contenido del Popup</h2>

@using (Html.BeginForm("SavePopup", "Gestion", FormMethod.Post))
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.ShowPopup, new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.ShowPopup, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.ShowPopup, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		@Html.Hidden("FileUploadUrl", Url.Action("UploadFiles", "Gestion"))
		<div class="col-md-12">
			<div id="uploadMsg"></div>
		</div>
		<div class="col-md-12">
			<label class="control-label col-md-2">Subir imagen: </label> <div class="col-md-10"><input type="file" id="fileOne" name="files[0]" /></div>
		</div>
		<div class="col-md-12 col-md-offset-2">
			<button type="button" id="btnUpload" class="btn btn-default">Subir Archivo</button>
		</div>						
	</div>
	<div class="form-group">
		@Html.LabelFor(model => model.Contenido, new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.EditorFor(model => model.Contenido, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Guardar" class="btn btn-default" />
		</div>
	</div>
</div>
}

	<div>
		@Html.ActionLink("Volver a Gestión", "Index")
	</div>

	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
		@Scripts.Render("~/bundles/chiri")
	}
